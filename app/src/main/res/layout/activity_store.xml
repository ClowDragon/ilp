<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/storetext"
        android:layout_width="119dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:text="Store"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usergold"
        android:layout_width="228dp"
        android:layout_height="67dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:paddingStart="10dp"
        android:text="Your gold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userCurrentRatio"
        android:layout_width="323dp"
        android:layout_height="33dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:paddingStart="10dp"
        android:text="Your ratio"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="369dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:src="@drawable/coinx2_booster" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="195dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="75dp"
                android:text="Need 1000 gold for this booster and last for 1 day."
                tools:layout_editor_absoluteX="79dp"
                tools:layout_editor_absoluteY="186dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goldboosterbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="11dp"
                android:text="Buy"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="170dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/backtogameimageButton"
        android:layout_width="154dp"
        android:layout_height="74dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
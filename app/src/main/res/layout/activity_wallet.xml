<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/walletLayout"
    tools:context="com.example.chris.ilp.walletActivity">

    <Button
        android:id="@+id/backtogameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Game" />

    <TextView
        android:id="@+id/rateOfToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHIL\nDoll\nPENY\nRMB\nRates"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Coins"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="236dp" />

    <TextView
        android:id="@+id/gifts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received Coins from others"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/listofgifts"
        android:layout_width="match_parent"
        android:layout_height="194dp" />


</LinearLayout>